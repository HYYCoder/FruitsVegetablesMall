<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_fbfbfb"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/frame_toolbar"
        layout="@layout/fram_toolbar" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom"
        android:layout_below="@id/frame_toolbar"
        android:layout_marginTop="@dimen/spacing_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_ffffff"
                android:orientation="vertical"
                android:padding="@dimen/spacing_15">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/font_14"
                        tools:text="柿子" />

                    <TextView
                        android:id="@+id/user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/spacing_10"
                        android:gravity="center"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/font_14"
                        tools:text="123213123213" />

                </LinearLayout>

                <TextView
                    android:id="@+id/user_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/spacing_10"
                    android:gravity="left"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/font_14"
                    tools:text="测试测试测试测试测试测试测试测测试测试测试测试试测试测试测试测试测试" />
            </LinearLayout>

            <com.huangyiyang.fruitsvegetablesmall.view.main.CommonLayout
                android:id="@+id/common_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/spacing_10"
                android:background="@color/white_ffffff">

                <com.zhouyou.recyclerview.XRecyclerView
                    android:id="@+id/discount_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_10"
                    android:background="@color/white_ffffff"
                    android:visibility="visible" />
            </com.huangyiyang.fruitsvegetablesmall.view.main.CommonLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/discount_giftTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_15"
                    android:layout_marginBottom="@dimen/spacing_10"
                    android:paddingLeft="@dimen/spacing_15"
                    android:text="赠品"
                    android:visibility="gone" />

            </LinearLayout>

            <com.huangyiyang.fruitsvegetablesmall.view.main.CommonLayout
                android:id="@+id/common_contentGfit"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.zhouyou.recyclerview.XRecyclerView
                    android:id="@+id/gfit_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.huangyiyang.fruitsvegetablesmall.view.main.CommonLayout>

            <RelativeLayout
                android:id="@+id/rl_choose_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_15"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_15"
                android:visibility="gone">

                <TextView
                    android:id="@+id/coupon_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="@string/coupon_title"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/is_choose_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_16"
                    android:layout_toRightOf="@id/coupon_title"
                    android:background="@drawable/shape_radius3_stroke1_4289ff"
                    android:gravity="right"
                    android:padding="@dimen/spacing_5"
                    android:text="@string/coupon_choose"
                    android:textColor="@color/blue_4289ff"
                    android:textSize="@dimen/font_10" />

                <TextView
                    android:id="@+id/coupon_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:drawableRight="@drawable/goods_detail_right_arrow"
                    android:drawablePadding="@dimen/spacing_5"
                    android:gravity="right"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/font_14"
                    tools:text="优惠40元" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_15"
                android:background="@color/white_ffffff"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="@string/total_goods_amount"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/goods_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/font_14"
                    tools:text="1212121212" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_coupon_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_ffffff"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="@string/coupon_title"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/coupon_amount2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/font_14"
                    tools:text="1212121212" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_15"
                android:background="@color/white_ffffff"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_20"
                >

                <TextView
                    android:id="@+id/memo_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:text="@string/memo"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/font_14" />

                <EditText
                    android:id="@+id/memo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/spacing_10"
                    android:layout_toRightOf="@id/memo_info"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="@string/memo_hint"
                    android:maxLength="90"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/grey_999999"
                    android:textSize="@dimen/font_14" />

            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_50"
        android:layout_alignParentBottom="true"
        android:background="@color/white_ffffff">
    <LinearLayout
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_50"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white_ffffff">
        <TextView

            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/spacing_15"


            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/spacing_12"
            android:text="实付金额：" />
        <TextView
            android:id="@+id/confirm_order_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginRight="@dimen/spacing_15"

            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/spacing_18"
            tools:text="23123" />
    </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="3"
            android:background="@color/green_4CAF65"
            android:enabled="true"
            android:gravity="center"
            android:text="@string/common_confirm"
            android:textColor="@color/white_ffffff"
            android:textSize="@dimen/spacing_19" />

    </LinearLayout>
</RelativeLayout>