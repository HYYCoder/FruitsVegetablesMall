<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_fbfbfb"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/frame_toolbar"
        layout="@layout/fram_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_order_detail_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_5"
                android:background="@color/red_f02b2b"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_30"
                    android:layout_marginTop="@dimen/spacing_5"
                    android:layout_marginBottom="@dimen/spacing_5"

                    android:text="订单拆单失败，暂时无法支付，请联系工作人员解决"
                    android:textColor="@color/white_ffffff"
                    android:textSize="@dimen/font_13" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                style="@style/cardview_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_15"
                android:layout_marginBottom="@dimen/spacing_20">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_order_detail_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_15"
                            android:text="订单编号："
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_14" />

                        <TextView
                            android:id="@+id/tv_order_detail_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_5"
                            android:text="下单时间：2019-05-03 14:40"
                            android:textColor="@color/gray_999999"
                            android:textSize="@dimen/font_12" />

                    </LinearLayout>

                    <com.huangyiyang.fruitsvegetablesmall.view.main.CommonLayout
                        android:id="@+id/common_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/spacing_10"
                        android:background="@color/white_ffffff">

                        <com.zhouyou.recyclerview.XRecyclerView
                            android:id="@+id/order_recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_10"
                            android:background="@color/white_ffffff"
                            android:visibility="visible">

                        </com.zhouyou.recyclerview.XRecyclerView>
                    </com.huangyiyang.fruitsvegetablesmall.view.main.CommonLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/discount_giftTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_15"
                            android:layout_marginBottom="@dimen/spacing_10"
                            android:text="赠品"
                            android:textSize="@dimen/font_12"
                            android:visibility="gone" />

                    </LinearLayout>

                    <com.huangyiyang.fruitsvegetablesmall.view.main.CommonLayout
                        android:id="@+id/common_contentGfit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.zhouyou.recyclerview.XRecyclerView
                            android:id="@+id/gfit_recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </com.huangyiyang.fruitsvegetablesmall.view.main.CommonLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商品金额"
                            android:textColor="@color/grey_666666"
                            android:textSize="@dimen/font_12" />

                        <TextView
                            android:id="@+id/tv_order_detail_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_12" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_order_detail_coupon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优惠券"
                            android:textColor="@color/grey_666666"
                            android:textSize="@dimen/font_12" />

                        <TextView
                            android:id="@+id/tv_order_detail_coupon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_12" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单总价"
                            android:textColor="@color/grey_666666"
                            android:textSize="@dimen/font_12" />

                        <TextView
                            android:id="@+id/tv_order_detail_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_14" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/spacing_10"
                        android:background="@color/grey_bdbdbd" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货人"
                            android:textColor="@color/grey_666666"
                            android:textSize="@dimen/font_12" />

                        <TextView
                            android:id="@+id/tv_order_detail_people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_14" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="联系电话"
                            android:textColor="@color/grey_666666"
                            android:textSize="@dimen/font_12" />

                        <TextView
                            android:id="@+id/tv_order_detail_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_14" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货地址"
                            android:textColor="@color/grey_666666"
                            android:textSize="@dimen/font_12" />

                        <TextView
                            android:id="@+id/tv_order_detail_address"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_14" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="备注"
                            android:textColor="@color/grey_666666"
                            android:textSize="@dimen/font_12" />

                        <TextView
                            android:id="@+id/tv_order_detail_note"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:maxLength="90"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_14" />
                    </FrameLayout>

                    <Button
                        android:id="@+id/btn_receive_cancel"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/spacing_20"
                        android:background="@drawable/bg_button_read"
                        android:text="取消订单"
                        android:textColor="@color/grey_666666"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>