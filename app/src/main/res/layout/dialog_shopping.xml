<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/join_shopping_car_detail"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/white_ffffff"
            android:orientation="vertical"
            android:paddingLeft="@dimen/spacing_10"
            android:paddingBottom="@dimen/spacing_10"
            app:layout_constraintBottom_toTopOf="@+id/btn_join_shopping_car_join_ok"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/imageLayout"
                android:layout_width="95dp"
                android:layout_height="124dp">

                <com.huangyiyang.fruitsvegetablesmall.view.main.ImageViewSquare
                    android:id="@+id/classification_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/login_logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_toRightOf="@+id/imageLayout"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_gravity="right">

                    <Button
                        android:id="@+id/btn_join_shopping_car_cancel_dialog"
                        android:layout_width="49dp"
                        android:layout_height="32dp"
                        android:background="@color/white_ffffff"
                        android:text="X"
                        android:textColor="#AAAAAA"
                        android:textSize="@dimen/font_14"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_item_goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_6"
                    android:layout_marginTop="@dimen/spacing_5"
                    android:layout_marginRight="@dimen/spacing_10"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/grey_666666"
                    android:textSize="@dimen/font_14"
                    tools:text="商品名" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_10"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="3">

                    <LinearLayout
                        android:id="@+id/ll_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_5"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_item_goods_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_6"
                            android:gravity="top"
                            android:textColor="@color/red_e66c6c"
                            android:textSize="@dimen/font_14"
                            tools:text="33.33" />

                        <TextView
                            android:id="@+id/tv_item_goods_price_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:textColor="@color/black_686868"
                            android:textSize="@dimen/font_12"
                            tools:text="@string/recommend_list_item_price_unit" />

                        <TextView
                            android:id="@+id/tv_item_goods_old_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:textColor="@color/grey_aaaaaa"
                            android:textSize="@dimen/font_12"
                            tools:text="33.33" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_inventory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/ll_price"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="@dimen/spacing_20"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_join_shopping_car_inventory_sum"
                            android:layout_width="wrap_content"

                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/spacing_6"
                            android:maxLines="2"
                            android:text="@string/shopping_stock_text"
                            android:textSize="@dimen/font_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/goods_count_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/spacing_5"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/cb_goods_detail_activity_minus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:id="@+id/cb_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/icon_minus"
                                android:clickable="false"
                                android:focusable="false" />
                        </FrameLayout>


                        <EditText
                            android:id="@+id/et_shopping_count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:inputType="number|numberDecimal"
                            android:minWidth="@dimen/spacing_40"
                            android:paddingLeft="@dimen/spacing_5"
                            android:paddingRight="@dimen/spacing_5"
                            android:text="1"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/font_12" />


                        <FrameLayout
                            android:id="@+id/cb_goods_detail_activity_plus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:id="@+id/cb_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/icon_plus"
                                android:clickable="false"
                                android:focusable="false" />
                        </FrameLayout>
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_join_shopping_car_join_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_44"
            android:background="@drawable/btn_add_shopping_car_button"
            android:text="加入购物车"
            android:textColor="@color/white_ffffff"
            android:textSize="@dimen/font_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
