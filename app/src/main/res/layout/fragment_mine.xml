<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_fbfbfb"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.login.activity.LoginActivity">

    <include
        android:id="@+id/frame_toolbar"
        layout="@layout/fram_toolbar" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="-20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/frame_toolbar"
            android:orientation="vertical">

            <LinearLayout

                android:id="@+id/ll_main_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_mine_membership"
                        android:layout_width="126dp"
                        android:layout_height="62dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_mine_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_user_leavel_0"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:id="@+id/tv_mine_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_40"
                        android:layout_marginTop="@dimen/spacing_50"
                        android:text=""
                        android:textColor="@color/white_ffffff"
                        android:textSize="@dimen/font_24"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_mine_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_8"
                        android:text=""
                        android:textColor="@color/white_ffffff"
                        android:textSize="@dimen/font_12"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="@+id/tv_mine_name"
                        app:layout_constraintTop_toBottomOf="@+id/tv_mine_name" />

                    <TextView
                        android:id="@+id/tv_mine_use_corporate_owned_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_4"
                        android:text="100000000"
                        android:textColor="@color/white_ffffff"
                        android:textSize="@dimen/font_12"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="@+id/tv_mine_code"
                        app:layout_constraintTop_toBottomOf="@+id/tv_mine_code" />

                    <TextView
                        android:id="@+id/tv_mine_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_10"
                        android:text="00000000000"
                        android:textColor="@color/white_ffffff"
                        android:textSize="@dimen/font_12"
                        app:layout_constraintStart_toEndOf="@id/tv_mine_name"
                        app:layout_constraintTop_toTopOf="@id/tv_mine_name" />

                    <ProgressBar
                        android:id="@+id/pb_mine_point"
                        style="@style/StyleProgressBarMini"
                        android:layout_width="130dp"
                        android:layout_height="5dp"
                        android:layout_marginTop="@dimen/spacing_10"
                        android:background="@drawable/shape_progressbar_bg"
                        android:max="100"
                        android:progress="1"
                        app:layout_constraintStart_toStartOf="@id/tv_mine_name"
                        app:layout_constraintTop_toBottomOf="@id/tv_mine_name" />

                    <TextView
                        android:id="@+id/tv_mine_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_5"
                        android:text="00/00"
                        android:textColor="@color/white_ffffff"
                        android:textSize="@dimen/font_12"
                        app:layout_constraintStart_toStartOf="@id/tv_mine_name"
                        app:layout_constraintTop_toBottomOf="@id/pb_mine_point" />

                    <TextView
                        android:id="@+id/tv_mine_mybeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_minebeed_tangle"
                        android:layout_marginTop="@dimen/spacing_10"
                        android:text="我的福豆  "
                        android:textColor="@color/white_ffffff"
                        android:textSize="@dimen/font_12"
                        app:layout_constraintStart_toStartOf="@id/tv_mine_name"
                        app:layout_constraintTop_toBottomOf="@id/tv_mine_point" />

                    <TextView
                        android:id="@+id/tv_mine_beed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white_ffffff"
                        android:textSize="@dimen/font_24"
                        app:layout_constraintStart_toStartOf="@id/tv_mine_name"
                        app:layout_constraintTop_toBottomOf="@id/tv_mine_mybeed" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/spacing_15"
                    android:layout_marginRight="@dimen/spacing_15"
                    android:layout_marginTop="-20dp"
                    android:background="@color/white_ffffff"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/spacing_14"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_15">

                        <RelativeLayout
                            android:id="@+id/rl_order_all"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/icon_order_all" />

                                <TextView
                                    android:id="@+id/order_all"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/spacing_9"
                                    android:gravity="center"
                                    android:text="@string/order_all"
                                    android:textColor="@color/grey_666666"
                                    android:textSize="@dimen/font_12" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_order_to_be_received"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/iv_order_to_be_received"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/icon_order_to_be_received" />

                                <TextView
                                    android:id="@+id/order_to_be_received"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/spacing_9"
                                    android:gravity="center"
                                    android:text="@string/order_to_be_received"
                                    android:textColor="@color/grey_666666"
                                    android:textSize="@dimen/font_12" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_mine_discounts_center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/icon_discounts_center" />

                                <TextView
                                    android:id="@+id/mine_discounts_center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/spacing_9"
                                    android:gravity="center"
                                    android:text="@string/mine_discounts_center"
                                    android:textColor="@color/grey_666666"
                                    android:textSize="@dimen/font_12" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/spacing_15"
                    android:layout_marginTop="@dimen/spacing_20"
                    android:layout_marginRight="@dimen/spacing_15"
                    android:layout_marginBottom="@dimen/spacing_15"
                    android:background="@color/white_ffffff"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/spacing_14"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_20">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_20"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/spacing_10"
                        >
                        <ImageView
                            android:layout_width="@dimen/spacing_20"
                            android:layout_height="@dimen/spacing_20"
                            android:src="@drawable/icon_address"

                            />
                        <TextView
                            android:id="@+id/mine_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/spacing_5"
                            android:drawableRight="@drawable/goods_detail_right_arrow"
                            android:drawablePadding="@dimen/spacing_5"
                            android:gravity="left|center_vertical"
                            android:text="@string/mine_address"
                            android:textColor="@color/grey_666666"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/spacing_20"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/spacing_10"
                            >
                            <ImageView
                                android:layout_width="@dimen/spacing_20"
                                android:layout_height="@dimen/spacing_20"
                                android:src="@drawable/icon_help"

                                />
                         <TextView
                            android:id="@+id/mine_help"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                             android:layout_marginLeft="@dimen/spacing_5"
                            android:drawableRight="@drawable/goods_detail_right_arrow"
                            android:text="@string/mine_help"
                            android:textColor="@color/grey_666666"
                            android:textSize="@dimen/font_14" />
                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_20"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/spacing_10"
                        >
                        <ImageView
                            android:layout_width="@dimen/spacing_20"
                            android:layout_height="@dimen/spacing_20"
                            android:src="@drawable/contact"

                            />
                        <TextView
                            android:id="@+id/mine_connect_us"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/spacing_5"
                            android:layout_height="match_parent"
                            android:drawableRight="@drawable/goods_detail_right_arrow"
                            android:drawablePadding="@dimen/spacing_5"
                            android:text="@string/mine_connect_us"
                            android:textColor="@color/grey_666666"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_20"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/spacing_10"
                        >
                        <ImageView
                            android:layout_width="@dimen/spacing_20"
                            android:layout_height="@dimen/spacing_20"
                            android:src="@drawable/feedback"

                            />
                        <TextView
                            android:id="@+id/mine_feedback"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/spacing_5"
                            android:drawableRight="@drawable/goods_detail_right_arrow"
                            android:drawablePadding="@dimen/spacing_5"
                            android:gravity="left|center_vertical"
                            android:text="@string/mine_feedback"
                            android:textColor="@color/grey_666666"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/spacing_15"
                android:layout_marginTop="@dimen/spacing_19"
                android:layout_marginRight="@dimen/spacing_15"
                android:layout_marginBottom="@dimen/spacing_20"
                android:background="@color/white_ffffff"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/spacing_14"
                app:cardElevation="1dp">

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_ffffff"
                    android:enabled="true"
                    android:gravity="center"
                    android:text="@string/logout"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/font_14" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>