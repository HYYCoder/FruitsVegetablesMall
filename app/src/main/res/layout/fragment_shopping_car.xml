<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_fbfbfb"
    tools:context=".ui.main.activity.MainActivity">

    <include
        android:id="@+id/frame_toolbar"
        layout="@layout/fram_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/frame_toolbar"
            android:layout_marginBottom="@dimen/spacing_50"
            android:orientation="vertical">


            <com.huangyiyang.fruitsvegetablesmall.view.main.CommonLayout
                android:id="@+id/common_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/spacing_15"
                android:background="@color/grey_fbfbfb">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.zhouyou.recyclerview.XRecyclerView
                        android:id="@+id/shopping_car_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </com.huangyiyang.fruitsvegetablesmall.view.main.CommonLayout>


        </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/frame_toolbar"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_shopping_car_empty" />

            <TextView
                android:id="@+id/tv_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/spacing_36"
                android:layout_toRightOf="@id/shopping_car_check_all"
                android:text="购物车还是空的"
                android:textColor="@color/grey_999999"
                android:textSize="@dimen/spacing_14" />

            <Button
                android:id="@+id/btn_empty"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_30"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/spacing_50"
                android:background="@drawable/bg_shopping_car_empty"
                android:enabled="true"
                android:gravity="center"
                android:text="@string/shopping_car_empty_to_main"
                android:textColor="@color/white_ffffff"
                android:textSize="@dimen/spacing_14" />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_50"
        android:layout_alignParentBottom="true"
        android:background="@color/white_ffffff"
        android:paddingLeft="@dimen/spacing_15"
        android:paddingTop="@dimen/spacing_4"
        android:paddingRight="@dimen/spacing_15"
        android:paddingBottom="@dimen/spacing_4">

        <CheckBox
            android:id="@+id/shopping_car_check_all"
            android:layout_width="@dimen/spacing_20"
            android:layout_height="@dimen/spacing_20"
            android:layout_centerVertical="true"
            android:background="@drawable/shopping_car_check_box"
            android:button="@null"
            android:checked="true" />

        <TextView
            android:id="@+id/shopping_car_check_all_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_5"
            android:layout_toRightOf="@id/shopping_car_check_all"
            android:text="全选"
            android:textColor="@color/black_777777"
            android:textSize="@dimen/spacing_15" />

        <TextView
            android:id="@+id/shopping_car_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_15"
            android:layout_marginRight="@dimen/spacing_15"
            android:layout_toLeftOf="@id/btn_settlement"
            android:layout_toRightOf="@+id/shopping_car_check_all_text"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/spacing_13"
            tools:text="@string/total_money" />

        <Button
            android:id="@+id/btn_settlement"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing_36"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_common_100_radius_button"
            android:enabled="true"
            android:gravity="center"
            android:paddingLeft="@dimen/spacing_20"
            android:paddingRight="@dimen/spacing_20"
            android:textColor="@color/white_ffffff"
            android:textSize="@dimen/spacing_15"
            tools:text="@string/settlement" />

    </RelativeLayout>
</RelativeLayout>