<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_classification_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_ffffff"
    android:orientation="horizontal">


    <com.huangyiyang.fruitsvegetablesmall.view.main.ImageViewSquare
        android:id="@+id/classification_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/spacing_16"
        android:src="@drawable/login_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_6"
        android:layout_marginRight="@dimen/spacing_15"
        android:layout_toRightOf="@id/classification_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_order_number"
            android:layout_marginTop="@dimen/spacing_10"

            android:ellipsize="end"
            android:maxLines="3"
            android:text="大阪日本环球影¬城 大阪环球影城大门票+快速券大阪日本环球影¬城 大阪环球影城大门票+快速券大阪日本环球影¬城 大阪环球影城大门票+快速券大阪日本环球影¬城 大阪环球影城大门票+快速券"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/font_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginTop="@dimen/spacing_15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="bottom"
                    android:text=""
                    android:textColor="@color/red_e66c6c"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_item_goods_price_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_item_goods_price"
                    android:gravity="bottom"
                    android:text="@string/recommend_list_item_price_unit"
                    android:textColor="@color/black_686868"
                    android:textSize="@dimen/font_12" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_goods_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_price"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/spacing_1"
                android:layout_marginRight="25dp"
                android:gravity="bottom"
                android:text=""
                android:textColor="@color/grey_aaaaaa"
                android:textSize="@dimen/font_10"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/add_shopping_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/recommend_goods_item_add_shopping_car" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_d8d8d8"
        android:layout_marginLeft="@dimen/spacing_10"
        android:layout_marginRight="@dimen/spacing_10"
        android:layout_alignParentBottom="true"
    >
    </LinearLayout>
</RelativeLayout>
