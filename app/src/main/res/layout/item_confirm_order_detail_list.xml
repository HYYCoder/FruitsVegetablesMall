<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_classification_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_ffffff"
    android:orientation="horizontal"

   >


    <ImageView
        android:id="@+id/goods_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_15"
        android:layout_marginTop="@dimen/spacing_15"
        android:layout_marginBottom="@dimen/spacing_15"
        android:src="@drawable/login_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_6"
        android:layout_marginRight="@dimen/spacing_15"
        android:layout_toRightOf="@id/goods_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_order_number"
            android:layout_marginTop="@dimen/spacing_10"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/font_14"
            tools:text="大阪日本环球影¬城 大阪环球影城大门票+快速券大阪日本环球影¬城 大阪环球影城大门票+快速券大阪日本环球影¬城 大阪环球影城大门票+快速券大阪日本环球影¬城 大阪环球影城大门票+快速券" />



            <RelativeLayout
                android:id="@+id/ll_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_15">
                <TextView
                    android:id="@+id/tv_item_goods_price_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="bottom"
                    android:textColor="@color/grey_999999"
                    android:textSize="@dimen/font_12"
                    tools:text="单位：g" />

                <TextView
                    android:id="@+id/tv_item_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="bottom"
                    android:layout_gravity= "right"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/font_14"
                    tools:text="33.33" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_item_goods_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_gravity= "right"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/grey_999999"
                android:textSize="@dimen/font_12"
                tools:text="x123" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_d8d8d8"
        android:layout_marginLeft="@dimen/spacing_15"
        android:layout_marginRight="@dimen/spacing_15"
        android:layout_alignParentBottom="true"
        >
    </LinearLayout>
</RelativeLayout>
