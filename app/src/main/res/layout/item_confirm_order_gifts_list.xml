<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_classification_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_ffffff"
    android:orientation="horizontal"
   >


    <com.infoloop.ygf.shop.view.ImageViewSquare
        android:id="@+id/gift_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_15"
        android:src="@drawable/login_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginLeft="@dimen/spacing_6"
        android:layout_marginRight="@dimen/spacing_15"
        android:layout_toRightOf="@id/gift_img"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/spacing_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:id="@+id/ll_giftName_and_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <TextView
                    android:id="@+id/tv_item_gift_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/grey_666666"
                    android:textSize="@dimen/font_14"
                    tools:text="+快速券+快速券" />


                <TextView
                    android:id="@+id/tv_item_gift_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"

                    android:textColor="@color/grey_999999"
                    android:textSize="@dimen/font_14"
                    tools:text="33.33" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ll_unit_and_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_25">


                <TextView
                    android:id="@+id/tv_item_gift_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/grey_999999"
                    android:textSize="@dimen/font_14"
                    tools:text="+快速券+快速券" />


                <TextView
                    android:id="@+id/tv_item_gift_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:gravity="bottom"
                    android:textColor="@color/grey_999999"
                    android:textSize="@dimen/font_14"
                    tools:text="33.33" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_d8d8d8"
        android:layout_marginLeft="@dimen/spacing_15"
        android:layout_marginRight="@dimen/spacing_15"
        android:layout_alignParentBottom="true"
        >
    </LinearLayout>
</RelativeLayout>

