<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        android:layout_margin="@dimen/spacing_3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_rectangle_radius_10_ffffff"
            android:orientation="vertical"
            android:padding="@dimen/spacing_10">

            <com.huangyiyang.fruitsvegetablesmall.view.ImageViewSquare
                android:id="@+id/iv_item_goods_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_item_ticket_name"
                android:scaleType="centerCrop"
                android:src="@drawable/fvm_login_logo" />

            <TextView
                android:id="@+id/tv_item_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/spacing_40"
                android:layout_below="@+id/tv_item_order_number"
                android:layout_marginTop="@dimen/spacing_10"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="大阪日本环球影¬城 大阪环球影城大门票+快速券大阪日本环球影¬城 大阪环球影城大门票+快速券大阪日本环球影¬城 大阪环球影城大门票+快速券大阪日本环球影¬城 大阪环球影城大门票+快速券"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/font_14" />


            <TextView
                android:id="@+id/tv_item_goods_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_5"
                android:background="@drawable/bg_rectangle_radius_8_5584ff"
                android:paddingLeft="@dimen/spacing_5"
                android:paddingRight="@dimen/spacing_5"
                android:text="满200减20"
                android:textColor="@color/blue_5584ff"
                android:textSize="@dimen/font_10" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_24"
                android:layout_marginTop="@dimen/spacing_10">

                <TextView
                    android:id="@+id/tv_item_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="bottom"
                    android:text="33.33"
                    android:textColor="@color/red_e66c6c"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_item_goods_price_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/tv_item_goods_price"
                    android:gravity="bottom"
                    android:text="@string/recommend_list_item_price_unit"
                    android:textColor="@color/black_686868"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/tv_item_goods_old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_6"
                    android:layout_toRightOf="@id/tv_item_goods_price_unit"
                    android:gravity="bottom"
                    android:text="$22.88"
                    android:textColor="@color/black_686868"
                    android:textSize="@dimen/font_10"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/iv_item_goods_shoppingcar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/recommend_goods_item_add_shopping_car" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>