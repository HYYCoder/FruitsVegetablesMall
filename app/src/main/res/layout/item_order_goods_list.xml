<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_classification_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_ffffff"
    android:orientation="horizontal"
    android:paddingTop="@dimen/spacing_2"
    android:paddingBottom="@dimen/spacing_2">


    <ImageView
        android:id="@+id/iv_goods_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/spacing_5"
        android:layout_marginTop="@dimen/spacing_5"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_10"
        android:src="@drawable/login_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginLeft="@dimen/spacing_6"
        android:layout_marginRight="@dimen/spacing_10"
        android:layout_toRightOf="@id/iv_goods_img"
        android:orientation="vertical"
       >

            <RelativeLayout
                android:id="@+id/ll_goods_name_and_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <TextView
                    android:id="@+id/tv_item_goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/grey_666666"
                    android:textSize="@dimen/font_14"
                    tools:text="+快速券+快速券" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ll_unit_and_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_10">


                <TextView
                    android:id="@+id/tv_item_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textColor="@color/grey_999999"
                    android:textSize="@dimen/font_14"
                    tools:text="+快速券+快速券" />


                <TextView
                    android:id="@+id/tv_item_goods_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:gravity="bottom"
                    android:textColor="@color/grey_999999"
                    android:textSize="@dimen/font_14"
                    tools:text="33.33" />
            </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

