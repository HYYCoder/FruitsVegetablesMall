<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/cardview_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_orderlist_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_10"
            android:layout_marginEnd="65dp"
            android:maxLines="2"
            android:text="订单编号："
            android:textColor="@color/black_333333"
            android:textSize="@dimen/font_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_orderlist_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_5"
            android:text="05-12 18:28"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/font_12"
            app:layout_constraintStart_toStartOf="@id/tv_orderlist_id"
            app:layout_constraintTop_toBottomOf="@id/tv_orderlist_id" />

        <ImageView
            android:id="@+id/iv_orderlist_alert"
            android:layout_width="@dimen/spacing_58"
            android:layout_height="@dimen/spacing_58"
            android:src="@drawable/alert_bg"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_orderlist_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_10"
            android:layout_marginEnd="@dimen/spacing_10"
            android:textColor="@color/grey_666666"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_imgs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_20"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_orderlist_id"
            app:layout_constraintTop_toBottomOf="@id/tv_orderlist_time">

            <ImageView
                android:id="@+id/iv_imgs1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/spacing_5"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_imgs2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/spacing_5"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_imgs3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/spacing_5"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_imgs4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/spacing_5"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_imgs5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/spacing_5"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_imgs6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_orderlist_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_15"
            android:layout_marginEnd="@dimen/spacing_10"
            android:text="支付金额：¥1719.00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_imgs" />

        <TextView
            android:id="@+id/tv_orderlist_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_10"
            android:text="共8种商品"
            app:layout_constraintEnd_toStartOf="@id/tv_orderlist_price"
            app:layout_constraintTop_toTopOf="@id/tv_orderlist_price" />

        <Button
            android:id="@+id/btn_orderlist"
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_orderlist_price" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>