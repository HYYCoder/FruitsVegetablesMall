<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_classification_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_ffffff"
    android:orientation="horizontal"
    >
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/spacing_10"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey_fbfbfb"
       >
        <TextView
            android:id="@+id/btn_clear_overdue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/spacing_15"
            android:layout_marginRight="@dimen/spacing_15"
            android:layout_marginBottom="@dimen/spacing_15"
            android:background="@drawable/bg_btn_clear_overdue"
            android:padding="@dimen/spacing_4"
            android:text="@string/btn_clear_overdue"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/font_12" />
    </LinearLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/spacing_15"
        android:layout_marginTop="@dimen/spacing_10"
        android:layout_marginBottom="@dimen/spacing_10"

        >
    <RelativeLayout
        android:id="@+id/fl_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <CheckBox
            android:id="@+id/shopping_car_check"
            android:layout_width="@dimen/spacing_20"
            android:layout_height="@dimen/spacing_20"
            android:background="@drawable/shopping_car_check_box"
            android:button="@null"
            android:gravity="center"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_item_overdue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black_686868"
            android:textSize="@dimen/font_12"
            tools:text="@string/item_overdue"/>

    </RelativeLayout>

        <ImageView
            android:id="@+id/goods_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_10"
            android:layout_toRightOf="@id/fl_check"
            android:src="@drawable/login_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_6"
        android:layout_toRightOf="@id/goods_img"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_order_number"
            android:layout_marginRight="@dimen/spacing_15"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/font_14"
            tools:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_15"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="120dp"
                    android:maxLines="3"
                    android:gravity="bottom"
                    android:textColor="@color/red_e66c6c"
                    android:textSize="@dimen/font_14"
                    tools:text="33.33" />
                <TextView
                    android:id="@+id/tv_item_goods_price_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@id/ll_price"
                    android:gravity="center"
                    android:textColor="@color/black_686868"
                    android:textSize="@dimen/font_12"
                    tools:text="@string/recommend_list_item_price_unit" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/goods_count_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/spacing_15"
                android:visibility="invisible"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/cb_goods_detail_activity_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/cb_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/icon_minus"
                        android:clickable="false"
                        android:focusable="false" />
                </FrameLayout>


                <EditText
                    android:id="@+id/et_shopping_count"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/spacing_40"
                    android:maxWidth="70dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_edit_goods_count"
                    android:gravity="center"
                    android:inputType="number|numberDecimal"
                    android:maxLength="7"
                    android:text="1"

                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/font_12" />


                <FrameLayout
                    android:id="@+id/cb_goods_detail_activity_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/cb_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@drawable/icon_plus"
                        android:clickable="false"
                        android:focusable="false" />
                </FrameLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>
        a
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_d8d8d8"
            android:layout_marginLeft="@dimen/spacing_15"
            android:layout_marginRight="@dimen/spacing_15"
            >

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
